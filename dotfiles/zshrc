export ZSH="/home/$USER/.oh-my-zsh"

ZSH_THEME="sonicradish"


plugins=(git zsh-autosuggestions)

source $ZSH/oh-my-zsh.sh

alias yt='yt-dlp'
alias ytmp3='yt-dlp --extract-audio --audio-format mp3'

alias conf='vim ~/.zshrc'
alias install='sudo apt install -y'
alias search='dnf search -C'
alias backups='sudo timeshift-gtk'
alias gs='git status'
alias gc='git commit'
alias gp='git push'
alias ga='git add'
alias gr='git rm'
alias gd='git diff'
alias gl='git log'
alias netstat='sudo netstat'
alias music='mpv --no-video'
alias tools='sel=$(ls ~/linux_files/scripts | fzf) && vim ~/linux_files/scripts/$sel'
alias mpv='mpv --profile=720p'
alias fs='flatpak search'
alias fii='flatpak install -y'
alias fr='flatpak remove -y'

alias open='xdg-open'
alias 2up='sudo dnf check-update'

if [ $TILIX_ID ] || [ $VTE_VERSION ]; then
        source /etc/profile.d/vte.sh
fi

